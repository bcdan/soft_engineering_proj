<div class="container" id="dashboard">
	<h1 class="mt-4">Dashboard</h1>
	<p class="lead mb-3">Welcome <%= name %></p>
	<ul class="list-group" id="dashboard_list">
		<% if(user.role === true){ %>
			<li class="list-group-item">
				<a href="/admin" class="btn btn-light dash-btn" id="admin"><i class="fas fa-cog"></i> Admin Panel</a>
			</li>
		<% } %>
		<li class="list-group-item"><a href="/" class="btn btn-success dash-btn" style="border-left:3px " ><i class="fas fa-shopping-cart"></i> Store</a>
		</li>
		<li class="list-group-item"><button type="button" class="btn btn-primary dash-btn" data-toggle="modal" data-target="#inventoryModalLong">
			<i class="fas fa-shopping-bag"></i> Inventory
		  </button>
		</li>
		<li class="list-group-item"><a href="/users/logout" class="btn btn-danger dash-btn"><i class="fas fa-sign-out-alt"></i> Logout</a></li>
	</ul>
	<!-- Button trigger modal -->
</div>
<br>


  <!-- Modal -->
  <div class="modal fade" id="inventoryModalLong" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
	<div class="modal-dialog" role="document">
	  <div class="modal-content">
		<div class="modal-header">
		  <h5 class="modal-title" id="exampleModalLongTitle">My Inventory</h5>
		  <button type="button" class="close" data-dismiss="modal" aria-label="Close">
			<span aria-hidden="true">&times;</span>
		  </button>
		</div>
		<div class="modal-body">
			<ul class="list-group modal-list">

			</ul>

		</div>
		<div class="modal-footer">
		  <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
		</div>
	  </div>
	</div>
  </div>

  <script src="dashboard.js" async></script>

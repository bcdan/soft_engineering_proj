        <div class="row">
            <div class="col-lg-7" id="title-container">
                <div class="title-box">
                    <h2>On sale</h2>
                </div>
                <div class="row">
                        <% for(let i = 0 ; i< products.length;i++) {%>
                        <div class="col-lg-3 col-md-12 mb-4">
                            <div class="card ">
                                <div class="product-top ">

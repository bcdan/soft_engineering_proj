                                </div>
                                <div class="product-bottom text-center">
                                    <i class="fa fa-star"></i>
                                    <i class="fa fa-star"></i>
                                    <i class="fa fa-star"></i>
                                    <i class="fa fa-star"></i>
                                    <i class="fa fa-star"></i>
                                    <h3><bold><%=products[i].title%></bold></h3>
                                  <h5><strong> $ <%=products[i].price%></strong> </h5> 
                                </div>
                            </div>
                        </div>

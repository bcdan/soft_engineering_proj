    <section class="single-product">
        <div class="container">
            <div class="row">
                <div class="col-md-5">
                    <div id="product-slider" class="carousel slide carousel-fade" data-ride="carousel">
                        <div class="carousel-inner">
                            <div class="carousel-item active">
                                <img src="<%=game.picture%>" class="d-block">
                            </div>
                        </div>
                        <a class="carousel-control-prev" href="#product-slider" role="button" data-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="sr-only">Previous</span>
                          </a>
                          <a class="carousel-control-next" href="#product-slider" role="button" data-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="sr-only">Next</span>
                          </a>

                    </div>
                </div>
                <div class="col-md-7">
                    <p class="new-arrival text-center">NEW</p>
                    <h2><%=game.title%></h2>
                    <i class="fa fa-star"></i>
                    <i class="fa fa-star"></i>
                    <i class="fa fa-star"></i>
                    <i class="fa fa-star"></i>
                    <i class="fa fa-star"></i>
                    <span class="badge badge-success"><%=game.price%></span>
                    <!--<p id="price">USD $40.00</p>--->    
                        <p id="genre"><b>Genre:</b> Shooter</p>
                        <p id="company"><b>Company:</b> Rockstar games</p>     
                    </p>

                    <div class="button">
                      <a class="btn btn-info float" href="/payment/<%=game.id%>" role="button"><i class="fas fa-arrow-circle-left"></i> BUY</a>
                    </div>              
                  </div>
            </div>
        </div>
    </section>


    <!-------------product-desription-------->
    <section class="product-description">
        <div class="container">
            <h4><b>Game Description</b></h4>
            <p id="description"><%=game.description%></p>
            <hr>
        </div>


    </section>


	<div class="container">
		<nav class="navbar sticky-top navbar-light bg-light">
			<a class="btn btn-info" href="/admin"><i class="fas fa-arrow-circle-left"></i> Back</a>			
		</nav>
		<div class="row">
			<% for(let p of products) {%>
				<div class="col-lg-4 col-md-6 mb-4">
					<div class="card h-100">
						<div class="card-body">
							<h4 class="card-title"><%= p.title %>
							</h4>
							<h5>Game ID : <%= p.game_id %></h5>
							<h5>CDKey : <%= p.cdkey %></h5>
							<h5>Picture URL: <%= p.picture %></h5>
							<h5>Price: <%= p.price %> $</h5>
							<p class="card-text"><%= p.description %></p>
						</div>
							<div class="card-footer">
							<form action="/admin/delete-product/<%=p.id%>" method="POST">
								<button type="submit" class="btn btn-danger">Delete</button>
								<a class="btn btn-primary" href="/admin/edit-product/<%=p.id%>" role="button">Edit</a>
							</form>	
							</div>
					</div>
				</div>
			<%
				}
			%>

		</div>
	</div>
